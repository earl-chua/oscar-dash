<div>
  <div>
    <h1>
      Ballot #<%= @the_ballot.id %> details
    </h1>

    <div>
      <div>
        <a href="/ballots">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_ballot/<%= @the_ballot.id %>">
          Delete ballot
        </a>
      </div>
    </div>

      <table>
        <tr>
          <td>
            <label for="ceremony_year_box">
              <b>Ceremony Year</b>
            </label>
          </td>
          <td>
            <%= @the_ballot.ceremony_year %>
          </td>
        </tr>  

        <tr>
          <td>
            <label for="user_id_box">
              <b>User</b>
            </label>
          </td>
          <td>
            <%= @the_ballot.user_id %>
          </td>
        </tr>  

        <tr>
          <td>
              <b>Best Actor</b>
          </td>
          <td>
              <%= @the_ballot.actor_id %>
          </td>
        </tr> 

        <tr>
          <td>
              <b>Best Actress</b>
          </td>
          <td>
              <%= @the_ballot.actress_id %>
          </td>
        </tr> 

        <tr>
          <td>
              <b>Best Supporting Actor</b>
          </td>
          <td>
              <%= @the_ballot.s_actor_id %>
          </td>
        </tr> 

        <tr>
          <td>
              <b>Best Supporting Actress</b>
          </td>
          <td>
              <%= @the_ballot.s_actress_id %>
          </td>
        </tr> 

        <tr>
          <td>
              <b>Best Director</b>
          </td>
          <td>
              <%= @the_ballot.director_id %>
          </td>
        </tr>       

        <tr>
          <td>
              <b>Best Original Screenplay</b>
          </td>
          <td>
              <%= @the_ballot.o_screenplay_id %>
          </td>
        </tr>         

        <tr>
          <td>
              <b>Best Adapted Screenplay</b>
          </td>
          <td>
              <%= @the_ballot.a_screenplay_id %>
          </td>
        </tr>   

        <tr>
          <td>
            <b>Best Picture</b>
          </td>
          <td>
            <%= @the_ballot.picture_id %>                          
          </td>
        </tr>

        <tr>
          <td>
            <b>Created at</b>
          </td>
          <td>
            <%= time_ago_in_words(@the_ballot.created_at) %> ago
          </td>
        </tr>        

        <tr>
          <td>
            <b>Updated at</b>
          </td>
          <td>
            <%= time_ago_in_words(@the_ballot.updated_at) %> ago
          </td>
        </tr>
      </table>

  </div>
</div>

<hr>